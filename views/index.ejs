<!doctype html>
<html lang="en">
  <head>
    <title>Coast Capital Expense Claims System</title>
    <script src="/javascripts/jquery-3.3.1.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:100,100italic,300,300italic,400,400italic,500,500italic,700,700italic,900,900italic&subset=latin,latin-ext,cyrillic,cyrillic-ext,greek-ext,greek,vietnamese">
    <link rel="stylesheet" type="text/css" href="/stylesheets/index.css"> <!-- load custom styles -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"> <!-- load custom styles-->    
    <link rel="stylesheet" type="text/css" href="/stylesheets/ionicons.min.css">
    <link rel="stylesheet" type="text/css" href="/node_modules/react-select/dist/react-select.css">
  </head>
  <body>
    <div class="container">
      <img src="https://www.uvic.ca/innovation/assets/images/graphics/logos/coastlogo.PNG"/>
      <span class="header">Expense Claims System</span>
      <div class="subheader">
        <h2>Expense Claim Forms, Simplified.</h2>
        <p>Login to get started!</p>
      </div>
      <div class="login-container">
        
        <!-- LOGIN FORM -->
        <form action="/login" method="post">
          <div class="form-group">
            <input type="email" placeholder="username@coastcapital.com" class="form-control" id="login-email" name="email" required>
          </div>
          <div class="form-group">
            <input type="password" placeholder="Enter your password" class="form-control" id="login-password" name="password" required>
          </div>

          <!-- show any messages that come back with authentication -->
          <% if (message.length > 0) { %>
              <div class="alert alert-danger"><%= message %></div>
          <% } %>
          <div class="form-group" style="height: 37px">
            <button class="page-button-green" type="submit">Login</button>
          </div>
        </form>
        <hr/>
      </div>
    </div>
  </body>
</html>